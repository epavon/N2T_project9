//
// This static class offers a few extensions to math library that may prove useful
class MathHelper {

    //
    // Return x mod y
    function int modulo(int x, int y) {
        return x - (x/y * y);
    }

    //
    // return aboslute value
    function int abs(int x) {
        if(x < 0) {
            return -1 * x;
        }
        return x;
    }
}